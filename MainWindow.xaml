<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:WpfApp1.Controls"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Controls:TimeController Margin="86,8,43,52" RenderTransformOrigin="0.5,0.5">
            <Controls:TimeController.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.658"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Controls:TimeController.RenderTransform>
        </Controls:TimeController>
        <Button x:Name="playButton" Click="PlayClick" Margin="267,354,510,50" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.164"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="pauseButton" Click="PauseClick" Margin="292,354,485,51"></Button>
        <Button x:Name="stopButton" Click="StopClick" Margin="319,348,457,51"></Button>
        <Button x:Name="increaseSpeed" Click="IncreaseFrequency" Margin="504,348,268,50"></Button>
        <Button x:Name="decreaseSpeed" Click="DecreaseFrequency" Margin="198,328,544,50"></Button>
    </Grid>
</Window>
